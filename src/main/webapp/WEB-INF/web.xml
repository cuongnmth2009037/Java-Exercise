<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>CreateProductServlet</servlet-name>
        <servlet-class>com.example.product.t2009m1java.controller.product.CreateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateProductServlet</servlet-name>
        <url-pattern>/product/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListProductServlet</servlet-name>
        <servlet-class>com.example.product.t2009m1java.controller.product.ListProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListProductServlet</servlet-name>
        <url-pattern>/product/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateProductServlet</servlet-name>
        <servlet-class>com.example.product.t2009m1java.controller.product.UpdateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateProductServlet</servlet-name>
        <url-pattern>/product/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteProductServlet</servlet-name>
        <servlet-class>com.example.product.t2009m1java.controller.product.DeleteProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProductServlet</servlet-name>
        <url-pattern>/product/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LayoutForm</servlet-name>
        <jsp-file>/admin/layout/form.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LayoutForm</servlet-name>
        <url-pattern>/layout-form</url-pattern>
    </servlet-mapping>


    <!--cart servelet -->
    <servlet>
        <servlet-name>AddCartServlet</servlet-name>
        <servlet-class>com.example.product.t2009m1java.controller.shoppingcart.AddCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCartServlet</servlet-name>
        <url-pattern>/shopping-cart/add</url-pattern>
    </servlet-mapping>
    <!--end cart servelet -->

    <!--client servelet -->
    <servlet>
        <servlet-name>SubCartServlet</servlet-name>
        <servlet-class>com.example.product.t2009m1java.controller.shoppingcart.SubCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubCartServlet</servlet-name>
        <url-pattern>/shopping-cart/sub</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetCartServlet</servlet-name>
        <servlet-class>com.example.product.t2009m1java.controller.shoppingcart.GetCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetCartServlet</servlet-name>
        <url-pattern>/shopping-cart/get</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RemoveCartServlet</servlet-name>
        <servlet-class>com.example.product.t2009m1java.controller.shoppingcart.RemoveCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveCartServlet</servlet-name>
        <url-pattern>/shopping-cart/remove</url-pattern>
    </servlet-mapping>
    <!--end client servelet -->
</web-app>
